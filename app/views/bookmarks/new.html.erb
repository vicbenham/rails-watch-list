
<div class="container mt-5">
  <%= form_with model: Bookmark.new, url: list_bookmarks_path(@list), local: true do |f| %>
    <div>
      <%= f.label :movie_id, "Choose a movie" %>
      <%= f.collection_select :movie_id, Movie.all, :id, :title %>
    </div>
    <div>
      <%= f.label :comment %>
      <%= f.text_field :comment %>
    </div>
    <%= f.submit "Add Movie" %>
  <% end %>
</div>
